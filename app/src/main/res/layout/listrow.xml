<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/list_selector_action"
    android:orientation="horizontal"
    android:paddingTop="5dp">

    <RelativeLayout
        android:id="@+id/contentBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/noteTextView"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:text="Portion of Note text"
        android:textSize="40sp"
        android:textColor="@color/colorNoteText"
        android:paddingLeft="22dp"
        />

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/noteTextView"
        android:text="Date goes here"
        android:textSize="20sp"
        android:textColor="@color/colorNoteDate"
        android:paddingLeft="22dp"
        />

    </RelativeLayout>

</RelativeLayout>